{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fopenmp",
				"-fdiagnostics-color=always",
				"-g",
				"-Wl,-z,stack-size=33554432",
				//"-O0",
				"-Wno-unused-result",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fopenmp",
				"-fdiagnostics-color=always",
				"-g",
				"-Wl,-z,stack-size=33554432",
				//"-O0",
				"-Wno-unused-result",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}